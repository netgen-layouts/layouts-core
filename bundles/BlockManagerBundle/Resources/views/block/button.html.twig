{% extends 'NetgenBlockManagerBundle:block:block.html.twig' %}

{% set style = block.parameter('style').value %}
{% set text = block.parameter('text') %}
{% set link = block.parameter('link') %}

{% set class = '' %}
{% if style == 'default_button' %}
    {% set class = 'btn btn-default' %}
{% elseif style == 'highlighted_button' %}
    {% set class = 'btn btn-primary' %}
{% elseif style == 'link' %}
    {% set class = 'link' %}
{% endif %}

{% block content %}
    {% if not link.empty and not text.empty %}
        {{ ngbm_render_parameter(
            link, {
                attr: {
                    class: class
                },
                content: text.value
            }
        ) }}
    {% endif %}
{% endblock %}
